<div class="container py-5" style="margin-top: 40px">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Ajoute un employé</h3>

        <%= simple_form_for @employe  do |e| %>
          <%= e.input :poste, placeholder: 'Intitulé du poste' %>
          <%= e.input :niveau_employe, placeholder: "Niveau de l'employé", collection: ["Comité de direction", "Entraineurs", "Bénévoles"] %>
          <%= e.input :nom, placeholder: "Nom de famille" %>
          <%= e.input :prenom, placeholder: "Prenom" %>
          <%= e.input :année, placeholder: "annnée" %>
          <%= e.input :photo, as: :file %>
          <%= e.submit class: 'btn btn-flat' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
