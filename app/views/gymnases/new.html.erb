<div class="container py-5" style="margin-top: 40px">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Ajoute une salle</h3>

        <%= simple_form_for @gymnase  do |g| %>
          <%= g.input :nom, placeholder: 'Nom de la salle:' %>
          <%= g.input :address, placeholder: "Adresse de la salle" %>


          <%= g.submit class: 'btn btn-flat' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
